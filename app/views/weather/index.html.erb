<html>
<head>
</head>
<body>
<form action="/weather" method="get">
Enter location: <input type="text" value="<%=@location%>" name="location"></input>
<input type="submit" value="Get Weather"/>
</form>
<%if @location.present?%>
    <br>
    <i><%="Results are cached" if @cached%></i>
    <br>
    <strong>Current Temperature:</strong> <%=@results['current_temp']%>
    <br><br>
    <strong>Forecast</strong>:<br>
    <br>
    <table border='1'>
    <tr align='center'>
        <th>Date</th>
        <th>Current Temperature</th>
        <th>Temperature Minimum</th>
        <th>Temperature Maximum</th>
    </tr>
    <%@results['forecast'].each do |date, temp|%>
        <tr align='center'>
        <td><%=date.to_date.strftime('%m/%d/%Y')%></td>
        <td><%=temp['current_temp']%></td>
        <td><%=temp['temp_min']%></td>
        <td><%=temp['temp_max']%></td>
        </tr>
    <%end%>
    </table>
<%end%>
</body>
